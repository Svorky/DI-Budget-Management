<section class="table">
    <span class="ids">#</span>
    <span>Amount</span>
    <span>Category</span>
    <span>Date</span>
    <span>Comment</span>
    <span></span>
    <span></span>
    <% let count = 1 %>
    <% for(let tr of locals.records){ %>
        <% let color = tr.type !== 'income' ? 'red' : 'green' %>
        <span class="<%= 'ids ' + color %>"><%= count %></span>
        <span class=<%= `${color}` %>><%= tr.amount %></span>
        <span class=<%= `${color}` %>><%= tr.category %></span>
        <span class=<%= `${color}` %>><%= tr.date.toLocaleString([], {year: 'numeric', month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit'}) %></span>
        <span class=<%= `${color}` %>><%= tr.comment %></span>
        <div><a href=<%= `/records/${tr.id}` %>><button type="button">>Edit</button></a></div>
        <div><button type="button" onclick=<%= `deleteRecord(${tr.id})` %>>Delete</button></div>
        <% count++ } %>
</section>